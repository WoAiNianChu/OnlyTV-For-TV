<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="541dp"
    android:layout_height="299dp"
    android:focusableInTouchMode="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="12dp"
    android:layout_marginEnd="43dp"
    app:strokeColor="@color/home_icon_stork"
    app:strokeWidth="2dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_recommend" />

    <View
        android:background="@drawable/shape_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="An adorable, super-powered puppy leaps into action"
        android:layout_marginBottom="79dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="32dp"
        android:textColor="@color/on_surface_variant"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:textColor="@color/on_surface"
        android:textSize="35sp"
        tools:text="Super Puppy" />

</com.google.android.material.card.MaterialCardView>